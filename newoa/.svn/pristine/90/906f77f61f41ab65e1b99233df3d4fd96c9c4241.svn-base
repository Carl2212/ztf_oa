@charset "utf-8";
/* CSS Document */
/*author:wm*/
/*content:评论样式*/
/*详细信息*/
.bjds-detailw { width:90%;margin:2rem auto 0rem auto; }
.bjds-detailp { margin-bottom: 1em; }
.bjds-detailh4 { margin-bottom: 1em; }
.bjds-detailtools { margin-top: 1em; margin-bottom: 1em; }
.bjds-detailtools .text-danger { font-weight: bold; }
.bjds-detailtools .btn { width: 7em; font-weight: bold; padding-top: .3em; padding-bottom: .3em; }
/*媒体列表*/
.bjds-media-list img { width: 40px; height: 40px; border-radius: 40px; }
.bjds-media-list .media-body { width: 100%; }
.bjds-media-body { padding: .5em .8em; position: relative; }
.bjds-media-bodyin { font-size: 1.166666666666667em; color: #333 }
.bjds-headpic { position: relative; }
.bjds-headpic img { width: 2.5em; height: 2.5em; border-radius: 2.5em; }
.bjds-headcart { display: inline-block; text-align: center; line-height: 2.5em; width: 2.5em; height: 2.5em; border-radius: 2.5em; background-color: #2dbf9b; color: #fff; }
.bjds-headcart i { font-size: 1.2em; line-height: 2em; }
.bjds_headerline { color: #e8e8e8; margin: 0px .5em; }
/*链接*/
.cy_link { height: auto; overflow: hidden; zoom: 1;margin:0px;padding:0px 0px 10px 0px;border-bottom:1px solid #eee; }
.cy_link li { float: left; line-height: 24px; margin-right: 30px;list-style:none; }
.cy_link s { width: 14px; height: 13px; float: left; margin: 5px 8px 0 0; }
.cy_link a { color: #999; }
